{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": false,
        "noEmit": true,
        "noErrorTruncation": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["."],
    "exclude": ["node_modules"]
}
